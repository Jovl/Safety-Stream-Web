<head>
    <link rel="stylesheet" type="text/css" href="~/Style.css" media="screen" />
</head>

<body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header style="margin-top:0px;" class="mdl-layout__header">
            <div class="mdl-layout__header-row">
                <span id="title" class="mdl-layout-title">Dispatcher Interface</span>
                <img id="logo" src="~/sslogo.png" />
                <div class="mdl-layout-spacer"></div>
            </div>
        </header>

        <main class="mdl-layout__content">
            <div class="page-content">

                <div id="user" class="demo-card-square mdl-card mdl-shadow--8dp">
                    <div class="mdl-card__title mdl-card--expand">
                        <h2 class="mdl-card__title-text">User Information</h2>
                    </div>

                    <div class="mdl-card__supporting-text">
                        <ul class='mdl-list'>
                            <li class="mdl-list__item">First Name: @ViewBag.personName</li>
                            <li class="mdl-list__item">Last Name:</li>
                            <li class="mdl-list__item">Phone Number:</li>
                        </ul>
                    </div>
                </div>

                <div id="gps" class="demo-card-square mdl-card mdl-shadow--8dp">
                    <div class="mdl-card__title mdl-card--expand">
                        <h2 class="mdl-card__title-text">User Location</h2>
                    </div>

                    <div class="mdl-card__supporting-text">
                        <ul class='mdl-list'>
                            <li class="mdl-list__item" id="Latitude">Latitude:</li>
                            <li class="mdl-list__item" id="Longitude">Longitude:</li>
                            <li class="mdl-list__item" id="Address">Address:</li>
                        </ul>
                    </div>
                </div>
                <div id="fixed">
                    <div id="map_canvas" style="width:100%; height:100%">

                        <div id="map-canvas"></div>
                        <button onclick="BeginSession()" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                           Begin Session
                        </button>
                        <button onclick="EndSession()" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                            End Session
                        </button>
                    </div>

                </div>
                <div id="rtc-demo">
                    <div id="vid-box" style="width:400px;">[<i>Video will appear here</i>]</div>

                    <div id="chat">
                        <input type="text" id="chat-msg" placeholder="Enter a message..." size="32" style="margin:2px;" />
                        <button style="height:28px;"onclick="SendMessage()" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                            Send
                        </button>
                        <div id="chat-box">[<i>Chat will appear here</i>]</div>
                    </div>
                </div>
              </div>
        </main>
    </div>

</body>
<script src="~/Scripts/Video.js" type="text/javascript"></script>
<script src="~/Scripts/GPS.js" type="text/javascript"></script>