<head>
    <link rel="stylesheet" type="text/css" href="~/Style.css" media="screen" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdn.pubnub.com/pubnub.min.js"></script>
    <script src="https://cdn.pubnub.com/webrtc/webrtc.js"></script>

</head>

<body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header style="margin-top:0px;" class="mdl-layout__header">
            <div class="mdl-layout__header-row">
                <span id="title" class="mdl-layout-title">Dispatcher Interface</span>
                <img id="logo" src="~/sslogo.png" />
                <div class="mdl-layout-spacer"></div>
            </div>
        </header>

        <main class="mdl-layout__content">
            <div class="page-content">

                <div id="user" class="demo-card-square mdl-card mdl-shadow--8dp">
                    <div class="mdl-card__title mdl-card--expand">
                        <h2 class="mdl-card__title-text">User Information</h2>
                    </div>

                    <div class="mdl-card__supporting-text">
                        <ul class='mdl-list'>
                            <li class="mdl-list__item">First Name:</li>
                            <li class="mdl-list__item">Last Name:</li>
                            <li class="mdl-list__item">Phone Number:</li>
                        </ul>
                    </div>
                </div>

                <div id="gps" class="demo-card-square mdl-card mdl-shadow--8dp">
                    <div class="mdl-card__title mdl-card--expand">
                        <h2 class="mdl-card__title-text">User Location</h2>
                    </div>

                    <div class="mdl-card__supporting-text">
                        <ul class='mdl-list'>
                            <li class="mdl-list__item" id="Latitude">Latitude:</li>
                            <li class="mdl-list__item" id="Longitude">Longitude:</li>
                            <li class="mdl-list__item" id="Address">Address:</li>
                        </ul>
                    </div>
                </div>
                <div id="fixed">
                    <divw id="map_canvas" style="width:100%; height:100%">

                        <div id="map-canvas"></div>
                    </divw>

                    <div>
                        <button id="session" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" onclick="return connectVideo()">
                            Begin Session
                        </button>

                        <button id="end" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" onclick="return end()">
                            End Session
                        </button>

                        <div id="chat">
                            <form action="#">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                    <input class="mdl-textfield__input" id="chat_msg" type="text">

                                    <label class="mdl-textfield__label" for="sample3">Client Chat</label>
                                    <button id="send-msg" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" onclick="sendMessage()">
                                        Send
                                    </button>
                                    <div id="chat-box"></div>
                                </div>
                            </form>
                        </div>


                    </div>

                </div>
                <div id="vid-box"></div>

            </div>
        </main>
    </div>

</body>

